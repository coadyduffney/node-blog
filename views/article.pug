extends layout

block content
  h1.mt-5= article.title
  h5 Written by #{author}
  p= article.body
  if user
    if user.id ==article.author
      hr
      a.btn.btn-dark.mr-2(href='/articles/edit/'+article._id) Edit
      a.btn.btn-danger.delete-article(href="#!", data-id=article._id) Delete
      